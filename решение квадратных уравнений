#include <stdio.h>
#include <cs50.h>
#include <math.h>


int main(void)

{

int a;
int b;
int c;

do
{

printf ("Квадратное уравнение имеет вид ax^2 + bx + c. Введите а\n:");

a= get_int();
printf ("Введите b:\n");
b= get_int();
printf ("Введите c:\n");
c= get_int();

int d = b^2 - 4*a*c;

if (d<0)

{
	printf ("Дискриминант меньше нуля. Корни не являются действительными числами.\n");
	return d;
}
else
{
	int x1 = (-b + sqrt(d))/2*a;
	int x2 = (-b - sqrt(d))/2*a;


printf ("%ix^2 + %ix + %i.\n D = %i.\n x1 = %i, x2 = %i.\n", a, b, c, d, x1, x2);
}

}
while (a!=0||b!=0||c!=0);


}
